{
  "name": "http-sms-gateway",
  "version": "0.0.1",
  "description": "A server for sending and receiving SMS via HTTP",
  "main": "index.js",
  "scripts": {
    "test": "ava --serial",
    "dev": "nodemon --watch 'src/**/*' -e js --exec 'node src/server.js | ./node_modules/.bin/pino-pretty --translateTime'",
    "init": "node ./scripts/init.js",
    "production": "NODE_ENV='production' forever start src/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/TimDaub/http-sms-gateway.git"
  },
  "keywords": [
    "serialport",
    "gsm",
    "gammu",
    "wammu",
    "sms",
    "receiving",
    "sending",
    "http",
    "rest"
  ],
  "author": "Tim Daubensch√ºtz <tim@daubenschuetz.de> (https://timdaub.github.io)",
  "bugs": {
    "url": "https://github.com/TimDaub/http-sms-gateway/issues"
  },
  "homepage": "https://github.com/TimDaub/http-sms-gateway#readme",
  "dependencies": {
    "abort-controller": "3.0.0",
    "better-sqlite3": "7.1.0",
    "compression": "1.7.4",
    "cross-fetch": "3.0.6",
    "date-fns": "2.16.1",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-bearer-token": "2.4.0",
    "express-pino-logger": "5.0.0",
    "express-validator": "6.6.1",
    "http-errors": "1.8.0",
    "isgsm7": "0.1.0",
    "nodemon": "2.0.4",
    "pino": "6.6.1",
    "serialport-gsm": "3.3.1",
    "uuid": "8.3.0",
    "wtfnode": "0.8.2"
  },
  "devDependencies": {
    "ava": "3.12.1",
    "expressively-mocked-fetch": "0.1.1",
    "forever": "3.0.2",
    "pino-pretty": "4.2.1",
    "sinon": "9.0.3",
    "supertest": "4.0.2"
  }
}
